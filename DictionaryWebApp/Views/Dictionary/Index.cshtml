@model DictionaryWebApp.Models.WordEntry

<h2>Dictionary</h2>

<form method="get">
    <form asp-controller="Dictionary" asp-action="Index" method="get" class="d-flex gap-2">
      
        <select name="language" class="form-select">
            <option value="en" selected>English</option>
            <option value="es">Spanish</option>
            <option value="fr">French</option>
            <option value="de">German</option>
            <option value="sp">Sepedi</option>
            <option value="iz">Isizulu</option>
            <!-- add more languages as needed -->
        </select>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    <input type="text" name="word" placeholder="Enter a word" class="form-control" />
</form>

@if (Model != null)
{
    <div class="mt-4">
        <h3>@Model.Word</h3>
        <p>@Model.Definition</p>
    </div>
}
else if (ViewBag.NotFound == true)
{
    <p class="text-danger mt-3">Word not found.</p>
}

